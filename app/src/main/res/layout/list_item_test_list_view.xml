<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_test_list_view_item_background_color">

    <TextView
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:id="@+id/testName"
        android:gravity="left"
        android:textAlignment="gravity"
        android:textColor="@color/colorText"
        android:textStyle="bold"
        android:layout_margin="@dimen/test_list_view_item_margin"
        android:textSize="@dimen/test_list_view_item_text_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.AppCompatButton
        android:layout_centerVertical="true"
        android:paddingLeft="@dimen/test_list_view_item_padding"
        android:paddingRight="@dimen/test_list_view_item_padding"
        android:background="@drawable/test_button_bg"
        android:gravity="center"
        android:textAlignment="center"
        android:layout_margin="@dimen/test_list_view_item_margin"
        android:textSize="@dimen/test_list_view_item_text_size"
        android:text="@string/string_test_view"
        android:id="@+id/testButton"
        android:layout_alignParentRight="true"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>