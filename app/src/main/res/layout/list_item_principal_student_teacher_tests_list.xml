<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/principal_student_teacher_card_view_margin"
    card_view:cardCornerRadius="@dimen/principal_student_teacher_card_view_corner"
    card_view:cardElevation="@dimen/principal_student_teacher_card_view_margin"
    android:background="@color/color_transparent_20_p">
    <RelativeLayout
        android:layout_margin="@dimen/principal_student_teacher_card_view_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/color_test_list_view_item_background_color">
        <LinearLayout
            android:id="@+id/label_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="@dimen/principal_test_layout_margin">
            <TextView
                android:id="@+id/label_teacher_name"
                android:layout_margin="@dimen/principal_test_layout_margin"
                android:padding="@dimen/principal_test_layout_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textAlignment="gravity"
                android:gravity="left"
                android:textSize="@dimen/parent_test_text_size"
                android:text="@string/string_principal_teacher_name"
                android:textColor="@color/color_transparent_40_p"/>
            <TextView
                android:id="@+id/label_test_name"
                android:layout_margin="@dimen/principal_test_layout_margin"
                android:padding="@dimen/principal_test_layout_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textAlignment="gravity"
                android:gravity="left"
                android:textSize="@dimen/parent_test_text_size"
                android:text="@string/string_principal_test_name"
                android:textColor="@color/color_transparent_40_p"/>
            <TextView
                android:id="@+id/label_test_attempt"
                android:layout_margin="@dimen/principal_test_layout_margin"
                android:padding="@dimen/principal_test_layout_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textAlignment="gravity"
                android:gravity="left"
                android:textSize="@dimen/parent_test_text_size"
                android:text="@string/string_principal_student_attempt"
                android:textColor="@color/color_transparent_40_p"/>
        </LinearLayout>
        <LinearLayout
            android:layout_toRightOf="@id/label_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="@dimen/principal_test_layout_margin">
            <TextView
                android:maxLines="1"
                android:ellipsize="end"
                android:id="@+id/p_teacher_name"
                android:layout_margin="@dimen/principal_test_layout_margin"
                android:padding="@dimen/principal_test_layout_margin"
                android:layout_width="match_parent"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:textAlignment="gravity"
                android:gravity="left"
                android:textSize="@dimen/parent_test_text_size"
                android:textColor="@color/colorText"/>
            <TextView
                android:maxLines="1"
                android:ellipsize="end"
                android:id="@+id/p_test_name"
                android:layout_margin="@dimen/principal_test_layout_margin"
                android:padding="@dimen/principal_test_layout_margin"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="gravity"
                android:gravity="left"
                android:textSize="@dimen/parent_test_text_size"
                android:textColor="@color/colorText"/>
            <TextView
                android:maxLines="1"
                android:ellipsize="end"
                android:id="@+id/p_test_attempt"
                android:layout_margin="@dimen/principal_test_layout_margin"
                android:padding="@dimen/principal_test_layout_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="gravity"
                android:gravity="left"
                android:textStyle="bold"
                android:textSize="@dimen/parent_test_text_size"
                android:textColor="@color/colorText"/>
        </LinearLayout>
        <TextView
            android:layout_below="@id/label_layout"
            android:maxLines="1"
            android:ellipsize="end"
            android:id="@+id/p_teacher_label"
            android:layout_margin="@dimen/principal_test_layout_margin"
            android:padding="@dimen/principal_test_layout_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="gravity"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="@dimen/parent_test_text_size"
            android:textColor="@color/colorText"
            android:text="@string/string_principal_teacher_view_test"
            android:visibility="gone"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>