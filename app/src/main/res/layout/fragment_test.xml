<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/reload_Test_Layout"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/reload_test"
                android:layout_margin="@dimen/reload_image_margin"
                android:layout_width="match_parent"
                android:layout_height="@dimen/reload_image_WH"
                android:src="@drawable/reload"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/reload_image_margin"
                android:textAlignment="center"
                android:gravity="center"
                android:textSize="@dimen/reload_text_size"
                android:textColor="@color/colorText"
                android:textStyle="bold"
                android:text="@string/string_reload_tests"/>
        </LinearLayout>
        <TextView
            android:id="@+id/test_taken_prompt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimaryText"
            android:text="@string/string_test_taken"
            android:gravity="center"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_margin="@dimen/test_fragment_title_margin"
            android:textSize="@dimen/test_fragment_text_size" />

        <RelativeLayout
            android:layout_margin="@dimen/test_fragment_relative_layout_margin"
            android:id="@+id/loadingtakentest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ProgressBar
                android:layout_centerHorizontal="true"
                android:id="@+id/testtakenprogressbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_below="@id/testtakenprogressbar"
                android:layout_centerHorizontal="true"
                android:textColor="@color/colorText"
                android:text="@string/string_loading_test_taken"
                android:gravity="center"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_margin="@dimen/test_fragment_title_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <ListView
            android:layout_marginTop="@dimen/test_list_view_margin"
            android:layout_marginBottom="@dimen/test_list_view_margin"
            android:dividerHeight="@dimen/test_list_view_divider_height"
            android:id="@+id/testtakenlist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </ListView>

        <TextView
            android:id="@+id/notesttaken"
            android:textColor="@color/colorText"
            android:text="@string/string_no_test"
            android:gravity="center"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_margin="@dimen/test_fragment_title_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/test_schedule_prompt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimaryText"
            android:text="@string/string_test_schedule"
            android:gravity="center"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_margin="@dimen/test_fragment_title_margin"
            android:textSize="@dimen/test_fragment_text_size" />

        <RelativeLayout
            android:layout_margin="@dimen/test_fragment_relative_layout_margin"
            android:id="@+id/loadingtestschedule"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ProgressBar
                android:layout_centerHorizontal="true"
                android:id="@+id/testscheduleprogressbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_below="@id/testscheduleprogressbar"
                android:layout_centerHorizontal="true"
                android:textColor="@color/colorText"
                android:text="@string/string_loading_test_schedule"
                android:gravity="center"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_margin="@dimen/test_fragment_title_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <ListView
            android:layout_marginTop="@dimen/test_list_view_margin"
            android:layout_marginBottom="@dimen/test_list_view_margin"
            android:dividerHeight="@dimen/test_list_view_divider_height"
            android:id="@+id/testschedulelist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></ListView>

        <TextView
            android:id="@+id/notestschedule"
            android:textColor="@color/colorText"
            android:text="@string/string_no_test"
            android:gravity="center"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_margin="@dimen/test_fragment_title_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</ScrollView>