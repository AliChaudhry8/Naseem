<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/principal_student_teacher_card_view_margin"
    card_view:cardCornerRadius="@dimen/principal_student_teacher_card_view_corner"
    card_view:cardElevation="@dimen/principal_student_teacher_card_view_margin">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/parent_test_margin_padding"
        android:background="@color/color_test_list_view_item_background_color">

        <TextView
            android:id="@+id/test_name"
            android:layout_margin="@dimen/parent_test_margin_padding"
            android:padding="@dimen/parent_test_margin_padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textAlignment="gravity"
            android:gravity="left"
            android:textSize="@dimen/parent_test_text_size"
            android:textColor="@color/colorText"/>

        <TextView
            android:id="@+id/start_time"
            android:layout_margin="@dimen/parent_test_margin_padding"
            android:padding="@dimen/parent_test_margin_padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textAlignment="gravity"
            android:gravity="left"
            android:textSize="@dimen/parent_test_text_size"
            android:textColor="@color/colorText"/>
    </LinearLayout>
</android.support.v7.widget.CardView>